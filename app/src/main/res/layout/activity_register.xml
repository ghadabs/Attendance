<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MainBack"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Insert_class_Activity">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:padding="2dp"
        android:src="@drawable/ic_auth_foreground" />
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/indigo_daisy"
        android:text="Register"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="60dp" />


    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/edittext_back"
        android:focusedByDefault="true"
        android:hint="Username"
        android:inputType="textCapWords"
        android:drawableStart="@drawable/ic_baseline_person_add"
        android:drawablePadding="16dp"
        android:padding="16dp" />
    <EditText
        android:id="@+id/register_university"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapWords"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/edittext_back"
        android:focusedByDefault="true"
        android:drawableStart="@drawable/ic_school_black_18dp"
        android:drawablePadding="16dp"
        android:hint="University"
        android:padding="16dp" />

    <EditText
        android:id="@+id/register_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/edittext_back"
        android:focusedByDefault="true"
        android:hint="Email"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="16dp"
        android:padding="16dp" />

    <EditText
        android:id="@+id/register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="16dp"
        android:background="@drawable/edittext_back"
        android:focusedByDefault="true"
        android:hint="Password"
        android:padding="16dp"
        android:ems="10"
        android:inputType="textPassword"/>
    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/gradient_theme_corner_rounded"
        android:padding="12dp"
        android:text="Register"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        app:backgroundTint="@color/colorAccent" />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layerType="software"
        android:src="@drawable/dash" />
    <TextView
        android:id="@+id/login_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already Registered? Sign In"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register"/>

</LinearLayout>